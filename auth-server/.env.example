# ========================================
# 服务器配置
# ========================================
PORT=3002
NODE_ENV=development

# ========================================
# 数据库配置
# ========================================
# 本地开发使用以下配置：
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ai_franchteacher
DB_USER=postgres
DB_PASSWORD=your_database_password

# Render 部署使用 DATABASE_URL（优先级更高）：
# DATABASE_URL=postgres://user:password@host:5432/dbname
# 注意：在 Render 上部署时，只需设置 DATABASE_URL，无需设置上面的单独配置

# ========================================
# JWT 配置
# ========================================
# 生成随机密钥命令：
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_secure_random_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# ========================================
# CORS 配置
# ========================================
# 本地开发：
ALLOWED_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# Render 生产环境（取消注释并修改为你的域名）：
# ALLOWED_ORIGINS=https://baronsue.github.io,https://your-custom-domain.com

# ========================================
# 安全配置
# ========================================
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=info
# 可选值: error, warn, info, debug

# ========================================
# 会话配置
# ========================================
SESSION_CLEANUP_INTERVAL=3600000
# 单位：毫秒（默认1小时清理一次过期会话）

# ========================================
# 限流配置
# ========================================
RATE_LIMIT_WINDOW_MS=900000
# 时间窗口（毫秒，默认15分钟）
RATE_LIMIT_MAX_REQUESTS=100
# 每个时间窗口最大请求数
